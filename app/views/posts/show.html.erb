<div class="container mt-5">
  <div class="row">
    <div class="col-lg-8">
      <%= image_tag(@post.image.url, class: "img-fluid rounded-start") %>
      <div class="mt-3">
        <h2><%= @post.title %></h2>
        <p>
          <%= @post.content %>
        </p>
        <div>
          <%= @post.tag1 %>
          <%= @post.tag2 %>
          <%= @post.tag3 %>
          <%= @post.tag4 %>
          <%= @post.tag5 %>
        </div>
        <%# 投稿者の情報 %>
        <div>
          投稿者：<%= @post.user.name %>
          <%= link_to "投稿者情報", "/profile/show/#{@post.user.id}" %>
        </div>
        <%# 投稿者本人であれば編集できる %>
        <% if @post.user.id == current_user.id %>
          <%= link_to "編集", "/post/edit/#{@post.id}" %>
          <%= link_to "削除", "/post/destroy/#{@post.id}", method: :delete %>
        <% end %>
      </div>
    </div>
  </div>
</div>
