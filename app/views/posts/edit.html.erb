<div class="container my-5">
  <div class="row">
    <div class="col-lg-8">
      <% if @post.errors.any? %>
        <% @post.errors.each do |error| %>
          <div class="alert alert-danger" role="alert"><strong>エラー！</strong> - <%= error.full_message %></div>
        <% end %>
      <% end %>
      <%= form_with(model: @post, url: "/post/update/#{@post.id}", local: true) do |form| %>
        <div class="mb-2">
          <%= form.text_field :title, class: "form-control", placeholder: "旅行記のタイトル..." %>
        </div>
        <div class="mb-2">
          <%= form.text_area :content, class: "form-control", placeholder: "旅行記の内容...", rows: 10 %>
        </div>
        <div class="mb-2">
          <%= form.file_field :image, class: "form-control" %>
        </div>
        <div class="mb-2">
          <%= form.select :tag1, {"北海道地方": "北海道地方", "東北地方": "東北地方", "関東地方": "関東地方", "中部地方": "中部地方", "近畿地方": "近畿地方", "四国地方": "四国地方", "中国地方": "中国地方", "九州地方": "九州地方"}, { include_blank: "地方を選択してください"}, { class: "form-select" } %>
        </div>
        <div class="mb-2">
          <%= form.select :tag2, {"1万円": "一万円", "二万円": "二万円", "三万円": "三万円"}, { include_blank: "旅行費用を選択してください"}, { class: "form-select" } %>
        </div>
        <div class="mb-2">
          <%= form.select :tag3, {"ドライブ": "ドライブ", "自然": "自然"}, { include_blank: "カテゴリーを選択してください"}, { class: "form-select" } %>
        </div>
        <div class="mb-2">
          <%= form.select :tag4, {"一人旅": "一人旅", "家族旅行": "家族旅行", "友達と旅行": "友達と旅行"}, { include_blank: "カテゴリーを選択してください"}, { class: "form-select" } %>
        </div>
        <div class="mb-2">
          <%= form.select :tag5, {"1万円": "一万円", "二万円": "二万円", "三万円": "三万円"}, { include_blank: "旅行費用を選択してください"}, { class: "form-select" } %>
        </div>
        <%= form.submit "投稿する", class: "btn btn-success px-5 mt-3" %>
      <% end %>
    </div>
    <div class="col-lg-4">
      <%= render "layouts/sidebar" %>
    </div>
  </div>
</div>
